  "scripts": {
    "server": "nodemon dist/server/server.js",
    "watch:server": "cross-env NODE_ENV=development webpack --config webpack.server.js --mode development --watch",
    "build:dev:client": "cross-env NODE_ENV=development webpack --config webpack.client.js --mode development",
    "build:dev:server": "cross-env NODE_ENV=development webpack --config webpack.server.js --mode development",
    "start:dev:client": "cross-env NODE_ENV=development webpack serve --config webpack.client.js --mode development",
    "start:dev:server": "concurrently \"yarn watch:server\" \"yarn server\"",
    "start": "concurrently \"yarn start:dev:server\" \"yarn start:dev:client\""
  },
